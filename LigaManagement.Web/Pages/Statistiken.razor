@page "/statistiken"
@using LigaManagerManagement.Web.Pages;
@inherits StatistikenListBase
@attribute [Authorize]

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>

<script>
    function scrollToTop() {
        window.scrollTo(0, 0);
    }
</script>

<style type="text/css">

    .columns-2 {
        width: 100%;
        display: flex;
        margin: 1px;
    }
</style>

<div class="container">
    <div class="form-group row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <h2><b>Statistiken</b></h2>

                </div>
            </div>
        </div>
    </div>

    <details open name="tab">
        <summary> Verein gegen Verein</summary>
        <div class="content">
            <div class="form-group row">
                <div class="col-sm-6">
                    <label style="display:inline-block;" class="col-sm-2 pl-0">Verein</label>
                    <select id="cboSaison" style="display:inline-block; " class="form-control dropdown col-sm-10" @onchange="Verein1Change">
                        @foreach (var verein in VereineList.OrderBy(x => x.Vereinname1))
                        {
                            <option value="@verein.VereinID"> @verein.Vereinname1 </option>
                        }
                        <option selected="selected">Verein auswählen</option>
                    </select>
                </div>
                <div class="col-sm-6">
                    <label style="display:inline-block;" class="col-sm-2">Verein</label>
                    <select id="cboSaison" style="display:inline-block;" class="form-control dropdown col-sm-10" @onchange="Verein2Change">

                        @foreach (var verein in VereineList.OrderBy(x => x.Vereinname1))
                        {
                            <option value="@verein.VereinID"> @verein.Vereinname1 </option>
                        }
                        <option selected="selected">Verein auswählen</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <label style="display:@DisplayElements;">Spielpaarungen: @Spielergebnisse.Count() </label>
                    <label style="display:@DisplayElements;">Statistiken: @Statistik</label>

                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    @foreach (var spielergebnis in Spielergebnisse.OrderByDescending(x => x.Datum))
                    {
                        <EditForm Model="@Spielergebnisse">
                            <DataAnnotationsValidator />
                            <ValidationSummary />
                            <DisplaySpielergebnis spielergebnis="spielergebnis"></DisplaySpielergebnis>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </details>
    <details name="tab">
        <summary>Statistik Verein</summary>
        <div class="content">
            <div class="form-group row">
                <div class="col-sm-6">
                    <label style="display:inline-block;" class="col-sm-2 pl-0">Verein</label>
                    <select id="cboSaison" style="display:inline-block; " class="form-control dropdown col-sm-10" @onchange="EinzelVereinChange">
                        @foreach (var verein in VereineList.OrderBy(x => x.Vereinname1))
                        {
                            <option value="@verein.VereinID"> @verein.Vereinname1 </option>
                        }
                        <option selected="selected">Verein auswählen</option>
                    </select>
                </div>                
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <label style="display:@DisplayElements;">Spielpaarungen: @Spielergebnisse.Count() </label>
                    <label style="display:@DisplayElements;">Statistiken: @Statistik</label>

                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    @foreach (var spielergebnis in Spielergebnisse.OrderByDescending(x => x.Datum))
                    {
                        <EditForm Model="@Spielergebnisse">
                            <DataAnnotationsValidator />
                            <ValidationSummary />
                            <DisplaySpielergebnis spielergebnis="spielergebnis"></DisplaySpielergebnis>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </details>
    <details name="tab">
        <summary> Höchste Heimsiege</summary>
        <div class="form-group row">
            <div class="col-sm-12">
                @if (Spieltage != null)
                {
                    @foreach (var spieltag in Spieltage.OrderByDescending(x => x.Tore1_Nr - x.Tore2_Nr).ThenByDescending(x => x.Datum).Take(20).ToList())
                    {
                        <EditForm Model="@Spieltage">
                            <DataAnnotationsValidator />
                            <ValidationSummary />
                            <DisplaySpieltag Spieltag="spieltag"></DisplaySpieltag>
                        </EditForm>
                    }
                }
            </div>
        </div>
    </details>
    <details name="tab">
        <summary> Höchste Auswärtssiege</summary>
        <div class="form-group row">
            <div class="col-sm-12">
                @if (Spieltage != null)
                {
                    @foreach (var spieltag in Spieltage.OrderByDescending(x => x.Tore2_Nr - x.Tore1_Nr).ThenByDescending(x => x.Datum).Take(20).ToList())
                    {
                        <EditForm Model="@Spieltage">
                            <!-- This will validate the form -->
                            <DataAnnotationsValidator />
                            <!-- This will show any validation errors -->
                            <DisplaySpieltag Spieltag="spieltag"></DisplaySpieltag>
                        </EditForm>
                    }
                }
            </div>
        </div>
    </details>
    <details name="tab">
        <summary> Torreichste Spiele</summary>
        <div class="form-group row">
            <div class="col-sm-12">
                @if (Spieltage != null)
                {
                    @foreach (var spieltag in Spieltage.OrderByDescending(x => x.Tore1_Nr + x.Tore2_Nr).ThenByDescending(x => x.Datum).Take(20).ToList())
                    {
                        <EditForm Model="@Spieltage">
                            <!-- This will validate the form -->
                            <DataAnnotationsValidator />
                            <!-- This will show any validation errors -->
                            <DisplaySpieltag Spieltag="spieltag"></DisplaySpieltag>
                        </EditForm>
                    }
                }
            </div>
        </div>
    </details>

    <div class="form-group row">
        <div class="col-sm-12">
            <div class="col-1 offset-11">
                <button onclick="topFunction()" id="btnTop" class="btn btn-primary" title="Nach oben" style='font-size:14px; display:@DisplayElements;'><span class="glyphicon glyphicon-arrow-up"></span></button>
            </div>
        </div>
    </div>
</div>

<script>

    let mybutton = document.getElementById("btnTop");

    // When the user scrolls down 20px from the top of the document, show the button
    window.onscroll = function () { scrollFunction() };

    function scrollFunction() {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            mybutton.style.display = "block";
        } else {
            mybutton.style.display = "none";
        }
    }

    // When the user clicks on the button, scroll to the top of the document
    function topFunction() {
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }
</script>

@page "/{CurrentligaUrl}/spieltage/{SpieltagNr}"
@inherits LigaManagerManagement.Web.Pages.SpieltagListBase
@inject DialogService DialogService
@attribute [Authorize]

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>
<style type="text/css">

    body {
    }


    .NewBtn {
        gap: 1px;
        margin-right: 2px;
        align-self: end;
        justify-content: end;
        margin-right: 0px !important;
    }

    a {
        text-decoration: none;
        display: inline-block;
        padding: 8px 16px;
    }

        a:hover {
            background-color: #ddd;
            color: black;
        }

    .previous {
        background-color: #1b6ec2;
        border-color: #1861ac;
        color: white;
    }

    .next {
        background-color: #1b6ec2;
        border-color: #1861ac;
        color: white;
    }

    .round {
        border-radius: 50%;
    }

    .VereinMinWidth {
        min-width: 80px;
        font-weight: normal;
    }

    .ToreMinWidth {
        min-width: 80px;
        /* font-weight: bold !important;         */
        /* border-color: wheat !important ; */
        /* background-color:black !important;
            color: white !important;  */
    }
</style>

@if (Spieltage == null)
{
    <RadzenStack AlignItems="AlignItems.Center" Class="rz-m-12" Gap="2rem">
        <RadzenProgressBarCircular Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate" />
    </RadzenStack>
}
else
{
    <div class="container">
        <div class="form-group row">
            <div class="col-sm-12">
                <RadzenCard class="m-0 rz-shadow-3">
                    <div class="d-flex flex-row">
                        <div class="card-body">
                            <h2>@Liganame @SpieltagNr.ToString() .Spieltag</h2>
                        </div>
                    </div>
                </RadzenCard>
            </div>
        </div>
        <RadzenCard style="margin-bottom:4px;">
            <div class="form-group row">
                <div class="dropdown mr-2" style="display:inline; margin-left:4px;">
                    <select id="cboSpieltage" data-toggle="tooltip" title="Spieltag auswählen" style="height:38px; width:180px; display:inline-block;" class="form-control" @onchange="SpieltagChange">
                        <option value="0" selected="selected">Spieltag auswählen</option>
                        if (@SpieltagList != null)
                        {
                        @foreach (var spieltag in SpieltagList)
                        {
                            @if (spieltag.Nummer == @SpieltagNr)
                            {
                                <option selected value="@spieltag.Nummer"> @spieltag.Name</option>
                            }
                            else
                            {
                                <option value="@spieltag.Nummer"> @spieltag.Name</option>
                            }
                        }
                        }
                    </select>
                    <span class="ml-3">
                        @if (VisibleBtnNew)
                        {
                            <NavLink href="@($"createspieltag/{SpieltagNr}")" title="Neuanlage" class="btn-primary btn"><span class="glyphicon glyphicon-plus-sign"></span></NavLink>

                        }
                        else
                        {
                            <NavLink href="@($"createspieltag/{SpieltagNr}")" title="Neuanlage" style="display:none;" class="btn-primary btn"><span class="glyphicon">&#x2b;</span></NavLink>

                        }
                    </span>
                </div>
            </div>
        </RadzenCard>
        <div class="form-group row">
            <div class="col-sm-12">
                <RadzenCard style="flex:1;margin-right:0px;">
                    <RadzenCard class="my-4" style="display: flex; align-items: center; gap: 0.5rem">
                        <RadzenSelectBar @bind-Value="@Density" TextProperty="Text" ValueProperty="Value"
                                         Data="@(Enum.GetValues(typeof(Density)).Cast<Density>().Select(t => new { Text = $"{t}", Value = t }))" Size="ButtonSize.ExtraSmall" />
                    </RadzenCard>
                    <RadzenDataGrid @ref="grid" Data="@Spieltage" EmptyText="Keine Ergebnisse zum Anzeigen" class="table table-striped" FilterMode="FilterMode.Advanced" PageSize="12"
                                    AllowPaging="true" AllowSorting="true" AllowFiltering="false"
                                    TItem="Spieltag" Visible="true" Responsive=true AllowColumnResize="true"
                                    FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                                    SelectionMode="DataGridSelectionMode.Single" Density="@Density" LogicalFilterOperator="LogicalFilterOperator.Or">
                        <Columns>
                            <RadzenDataGridColumn TItem="Spieltag" Property="SpieltagId" Width="50px" TextAlign="TextAlign.Right" Filterable="false" Visible=false Sortable=false Title="SpieltagId" />
                            <RadzenDataGridColumn TItem="Spieltag" CssClass="VereinMinWidth" Property="Verein1Anzeige" Width="30%" Sortable=true Title="Heim">

                            </RadzenDataGridColumn>
                            <RadzenDataGridColumn TItem="Spieltag" Title="" Sortable="true" Width="74px" MinWidth="74px">
                                <Template Context="data">
                                    <RadzenImage Path="@($"/Images/{data.Verein1}.webp")" style="width: 30px; height: 30px;" title="@data.Verein1" AlternateText="@(data.Verein1)" />
                                </Template>
                            </RadzenDataGridColumn>
                            <RadzenDataGridColumn TItem="Spieltag" CssClass="ToreMinWidth" Property="Tore1_Nr" TextAlign="TextAlign.Right" Width="8%" Sortable=true Title="" />
                            <RadzenDataGridColumn TItem="Spieltag" Property="Doppelpunkt" TextAlign="TextAlign.Center" Width="6%" Sortable=true Title="" />
                            <RadzenDataGridColumn TItem="Spieltag" CssClass="ToreMinWidth" Property="Tore2_Nr" TextAlign="TextAlign.Left" Width="8%" Sortable=true Title="" />
                            <RadzenDataGridColumn TItem="Spieltag" Title="Gast" Sortable="true" Width="74px" MinWidth="74px">
                                <Template Context="data">
                                    <RadzenImage Path="@($"/Images/{data.Verein2}.webp")" style="width: 30px; height: 30px;" title="@data.Verein2" AlternateText="@(data.Verein2)" />
                                </Template>
                            </RadzenDataGridColumn>
                            <RadzenDataGridColumn TItem="Spieltag" CssClass="VereinMinWidth" Property="Verein2Anzeige" Width="25%" Sortable=true Title="" />

                            <RadzenDataGridColumn TItem="Spieltag" FormatString="{0:dd.MM.yyyy}" Property="Datum" Width="18%" Sortable=true Title="Datum" />
                            <RadzenDataGridColumn TItem="Spieltag" Property="Ort" Width="30%" Sortable=true Title="Ort" />

                            <RadzenDataGridColumn TextAlign="TextAlign.Right" TItem="Spieltag" Property="SpieltagId" Width="80px" Filterable="false" Sortable="true">
                                <Template Context="data">
                                    <NavLink href="@($"editspieltag/{data.SpieltagId}")" title="Bearbeiten" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-edit"></span></NavLink>
                                </Template>
                            </RadzenDataGridColumn>
                            <RadzenDataGridColumn TextAlign="TextAlign.Right" TItem="Spieltag" Property="SpieltagId" Width="80px" Filterable="false" Sortable="true">
                                <Template Context="data">
                                    <NavLink @onclick="Delete_Click" data-toggle="Löschen" title="Löschen" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-remove-sign"></span></NavLink>
                                </Template>
                            </RadzenDataGridColumn>
                        </Columns>
                        <FooterTemplate>
                        </FooterTemplate>
                        <FooterTemplate>
                            Spiele: <b>@Spieltage.Count()</b>
                            Tore: <b>@Spieltage.Sum(x => x.Tore1_Nr + x.Tore2_Nr)</b>
                            Tore Durchschnitt: <b>@string.Format("{0:0.00}", @Spieltage.Average(x => x.Tore1_Nr + x.Tore2_Nr))</b>
                        </FooterTemplate>
                    </RadzenDataGrid>
                    <div class="row">
                        <div class="col-md-1">
                            <a type="button" Style="text-align:left;display:inline-block;" data-toggle="Voriger Spieltag" title="Voriger Spieltag" @onclick="SpieltagZurueck" class="previous round">&laquo;</a>
                        </div>
                        <div class="col-md-11 text-right">
                            <a type="button" data-toggle="Nächster Spieltag" title="Nächster Spieltag" @onclick="SpieltagVor" style="width: auto; text-align:left;display:inline-block;" class="next round">&raquo;</a>
                        </div>
                    </div>
                </RadzenCard>
                @* </div> *@
            </div>
        </div>
    </div>

    @code {

    async Task OpenSpieltag(int? spieltagsid)
    {
        await DialogService.OpenAsync<DialogCardPage>($"Spieltag {spieltagsid}",
              new Dictionary<string, object>() { { "SpieltagsID", spieltagsid } },
              new DialogOptions() { Width = "700px", Height = "520px" });
    }


}

}

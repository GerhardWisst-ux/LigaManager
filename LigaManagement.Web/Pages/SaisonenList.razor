@page "/saisonen"
@using LigaManagerManagement.Web.Pages;
@using LigaManagerManagement.Models;
@using Radzen;

@inherits SaisonenListBase

@attribute [Authorize]

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>

<style type="text/css">
    .rz-datatable tr {
        min-height: 8%;
        word-break: break-all;
    }
</style>

@if (SaisonenList == null)
{
    <div class="spinner"></div>
}
else
{
    <div class="container">
        <div class="form-group row">
            <div class="col-sm-12">
                <RadzenCard class="m-0 mb-3 rz-shadow-3">
                    <div class="d-flex flex-row">
                        <div class="card-body">
                            <h2 style="display:inline-block;">@Liganame Saisonen</h2>
                            <span class="ml-3">
                                <a href="createsaison" style="width:35px; height:30px;" title="Neuanlage Saison" class="btn btn-primary btn-sm form-control"><span class="glyphicon">&#x2b;</span></a>
                            </span>
                        </div>
                    </div>
                </RadzenCard>                
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">

                   <RadzenCard class="my-4" style="display: flex; align-items: center; gap: 0.5rem">                        
                        <RadzenSelectBar @bind-Value="@Density" TextProperty="Text" ValueProperty="Value"
                                         Data="@(Enum.GetValues(typeof(Density)).Cast<Density>().Select(t => new { Text = $"{t}", Value = t }))" Size="ButtonSize.Medium" />
                    </RadzenCard>

                <RadzenDataGrid @ref="grid" Data="@SaisonenList" class="table table-striped" FilterMode="FilterMode.Simple" PageSize="30"
                                AllowPaging="true" AllowSorting="true" Responsive=true Density="@Density" AllowFiltering="true"
                                TItem="Saison" Visible="true" AllowColumnResize="true"
                                FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                                LogicalFilterOperator="LogicalFilterOperator.Or">
                    <Columns>
                        <RadzenDataGridColumn TItem="Saison" Property="SaisonID" Title="SaisonID" Visible=false>
                            <FooterTemplate>
                                Saisonen: <b>@grid.View.Count()</b> von <b>@SaisonenList.Count()</b>
                            </FooterTemplate>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="Saison" Property="SaisonID" Width="10%" TextAlign="TextAlign.Right" Filterable="false" Sortable=true Title="ID" />
                        <RadzenDataGridColumn TItem="Saison" Property="Liganame" Width="30%" Sortable=true Title="Liganame" />
                        <RadzenDataGridColumn TItem="Saison" Property="Saisonname" Width="30%" Sortable=true Title="Saisonname" />
                        @* <RadzenDataGridColumn TItem="Saison" Property="Abgeschlossen" Width="15%" TextAlign="TextAlign.Center" Filterable="false" Reorderable Sortable=true Title="Abgeschlossen" /> *@
                        @* <RadzenDataGridColumn TItem="Saison" Property="Aktuell" Width="15%" TextAlign="TextAlign.Center" Filterable="false" Reorderable Sortable=true Title="Aktuell" /> *@
                        <RadzenDataGridColumn TextAlign="TextAlign.Right" TItem="Saison" Property="Abgeschlossen" Title="Abgeschlossen" Width="15%" Filterable="false" Sortable="false">
                            <Template Context="data">
                                <RadzenCheckBox @bind-Value=@data.Abgeschlossen TValue="bool" Name="chkAbgeschlossen" />
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TextAlign="TextAlign.Right" TItem="Saison" Property="Aktuell" Title="Aktuell" Width="15%" Filterable="false" Sortable="false">
                           <Template Context="data">
                                <RadzenCheckBox @bind-Value=@data.Aktuell TValue="bool" Name="chkAktuell" />
                            </Template>
                        </RadzenDataGridColumn>

                        <RadzenDataGridColumn TextAlign="TextAlign.Right" TItem="Saison" Property="SaisonID" Width="100px" Filterable="false" Sortable="false">
                            <Template Context="data">
                                <NavLink href="@($"editsaison/{data.SaisonID}")" title="Bearbeiten" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-edit"></span></NavLink>
                            </Template>
                        </RadzenDataGridColumn>
                    </Columns>
                </RadzenDataGrid>
                <RadzenRow Wrap="FlexWrap.NoWrap" Gap="10px" class="rz-white">
                    <RadzenColumn Offset="11" Style="text-align:right;">
                        <button onclick="topFunction()" id="btnTop" class="btn btn-primary btn-sm" title="Nach oben" style='font-size:12px'><span class="glyphicon glyphicon-arrow-up"></span></button>
                    </RadzenColumn>
                </RadzenRow>
            </div>
        </div>
    </div>



    <script>

        let mybutton = document.getElementById("btnTop");

        // When the user scrolls down 20px from the top of the document, show the button
        window.onscroll = function () { scrollFunction() };

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                mybutton.style.display = "block";
            } else {
                mybutton.style.display = "none";
            }
        }

        // When the user clicks on the button, scroll to the top of the document
        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>
}
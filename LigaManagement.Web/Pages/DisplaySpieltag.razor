@inherits DisplaySpieltagBase

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
</head>
<style type="text/css">

    @@media screen and (max-width: 767px) {

        .priority-1 {
            display: inline-block;
        }

        .priority-2 {
            display: none;
        }
    }

    .list-group-item {
        position: relative;
        display: block;
        padding: 0.5rem 0.5rem !important;
        margin-bottom: -1px;
        background-color: #fff;
        border: 1px solid rgba(0,0,0,.125);
    }

    .TableElement {
        border: 0px solid #fff;
        background-color: transparent;
    }

    .table td, .table th {
        padding: 0.05rem !important;
        vertical-align: top;
        border-top: 0px solid #dee2e6;
    }

    h4 {
        display: flex;
        flex-direction: row;
        width: 100%;
        height: 0.5px;
    }

        h4:after {
            content: "";
            flex: 1 1;
            border-bottom: 1px solid #000;
            padding: 0px;
            margin: -5.5px;
        }

    .crop {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        width: 270px;
    }

    body {
        font-size: 18px !important;
    }
    
</style>



@if (Spieltag == null)
{
    <div class="spinner"></div>
}
else
{
    <div style="width:100%;">     

        <table class="table table-striped">
            @if (Spieltag.Datum.ToString().IndexOf("20:30:00") > -1)
            {
                <thead>
                    <tr>
                        <th style="max-height:38px; max-width:180px;pointer-events:none;"  class="TableElement priority-1">V1</th>
                        <th style="max-height:38px; max-width:40px; pointer-events:none;" class="TableElement priority-1">T1</th>
                        <th style="max-height:38px; max-width:40px; pointer-events:none;" class="TableElement priority-1">T2</th>
                        <th style="max-height:38px; max-width:180px;pointer-events:none;" class="TableElement priority-1">V2</th>
                        <th class="TableElement priority-2">Ort</th>
                        <th class="TableElement priority-2">Datum</th>
                        <th class="TableElement priority-2">Zuschauer</th>
                    </tr>
                </thead>
            }            
            
            <tbody style="height: 10px !important; overflow: scroll; ">
                <tr>
                    <td><InputText readonly id="txtVerein1" class="TableElement priority-1" style="max-height:38px; width:180px;pointer-events:none;" tabindex="1" @bind-Value=Spieltag.Verein1 /></td>
                    <td><InputNumber readonly id="txtTore1" class="TableElement priority-1" style="max-height:38px; width:40px; text-align:right;pointer-events:none;" tabindex="2" @bind-Value=Spieltag.Tore1_Nr /></td>
                    <td><InputNumber readonly id="txtTore2" class="TableElement priority-1" style="max-height:38px; width:40px; text-align:right;pointer-events:none;" tabindex="3" @bind-Value=Spieltag.Tore2_Nr /></td>
                    <td><InputText readonly id="txtVerein2" class="TableElement priority-1" style="max-height:38px; width:180px;pointer-events:none;" tabindex="4" @bind-Value=Spieltag.Verein2 /></td>
                    <td><InputText readonly id="txtOrt" class="TableElement priority-2 crop" style="max-height:38px; width:280px;pointer-events:none;" tabindex="5" @bind-Value=Spieltag.Ort /></td>
                    <td><InputDate readonly id="txtDatum" class="TableElement priority-2" style="max-height:38px; width:120px;pointer-events:none;" tabindex="6" @bind-Value=Spieltag.Datum /></td>
                    <td><InputNumber readonly id="txtZuschauer" class="TableElement priority-2" style="max-height:38px; width:100px;pointer-events:none;" tabindex="7" @bind-Value=Spieltag.Zuschauer /></td>

                    <td>
                        <NavLink href="@($"editspieltag/{Spieltag.SpieltagId}")" class="btn-primary btn"><span class="glyphicon glyphicon-edit"></span> Bearbeiten</NavLink>
                    </td>
                    <td>
                        <NavLink @onclick="Delete_Click" class="btn-danger btn"><span class="glyphicon glyphicon-remove-sign"></span> Löschen</NavLink>
                    </td>
                </tr>
            </tbody>

        </table>
    </div>

}

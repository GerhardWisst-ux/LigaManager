<style>
    @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap');

    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }

    body {
        background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(75,14,154,1) 35%, rgba(0,212,255,1) 100%);
        font-family: 'Poppins', sans-serif;
        text-align: center;
    }

    form {
        border-radius: 10px;
        /* margin-top: 50px !important; */
        width: 50% !important;
        background-color: white !important;
        padding: 30px;
        display: inline-block;
    }

    .btn-primary {
        width: 100%;
        border: none;
        border-radius: 50px;
        background: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(75,14,154,1) 35%, rgba(0,212,255,1) 100%);
    }

    .form-control {
        color: rgba(0,0,0,.87);
        border-bottom-color: rgba(0,0,0,.42);
        box-shadow: none !important;
        border: none;
        border-bottom: 1px solid;
        border-radius: 4px 4px 0 0;
    }

    h4 {
        font-size: 2rem !important;
        font-weight: 500;
    }

    .form-label {
        font-weight: 600 !important;
    }

    @@media only screen and (max-width: 600px) {
        form {
            width: 100% !important;
        }
    }
</style>
@{
    // ViewData["Title"] = "Einloggen";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-12">
        <section>
            <form id="account" method="post">
                <h4>Login Ligamanager</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label style="text-align:left !important; display:block;" asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="text-align:left !important;display:block;" asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">Einloggen</button>
                </div>
                <div class="form-group mt-3">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Password vergessen?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Neuen Benutzer registrieren</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Email Bestätigung zusenden</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
